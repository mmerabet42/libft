HTML_NAME "*[@word]"

HTML_TAG_ATTRVALUE "\"*[\\\"|?![\"]@or?]\""
HTML_TAG_ATTR "
	*[
		*[@space]
		?[
			?[?[@HTML_NAME]@G] =
			?[?[@HTML_TAG_ATTRVALUE]@G]
		@G]
	@X]
"

HTML_INNER "
	*[
		?[?[
			*[@word]
		|
			?[@HTML_FORMAT]
		@or]@G]
		?[ ?[*[@space?]<@,] | *[@space?]  @or]
	@X]
"

HTML_FORMAT "
< ?[?[@HTML_NAME]@G] ?[?[@HTML_TAG_ATTR]@G?] *[@space?]>
	?[*[@space?] ?[@HTML_INNER]@G]
< / ?[1@BL] >
"
