HTML_NAME	"*[@word]"

HTML_BLOCK	"
?[
	<*[@space?]?[?[@HTML_NAME]@G]*[@space?]>
		*[@space?]
		*[
			?[?[@HTML_FORMAT]@G]
			*[@space?]
		@X?]
	<*[@space?]/*[@space?]?[1@BL]*[@space?]>
@G]
"

HTML_LINE	"
	?[<*[@space?]?[?[@HTML_NAME]@G]*[@space?]/*[@space?]>@G]
"

HTML_FORMAT	"
?[?[
	?[@HTML_BLOCK]
|
	?[@HTML_LINE]
@or]@G]
"
